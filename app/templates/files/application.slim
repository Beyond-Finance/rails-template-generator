doctype html
html lang='en'
  head
    title = content_for?(:title) ? yield(:title) : 'DISPLAY_NAME'

    meta charset='utf-8'
    meta name='viewport' content='width=device-width, initial-scale=1'
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application', defer: true

    = yield :head
  body
    = yield :body

    = yield
