  create_file '.rubocop.yml', <%= file_as_quoted_string '.rubocop.yml' %>
  run 'bundle binstubs rubocop'
  run 'bin/rubocop -A --only Style/FrozenStringLiteralComment'
  run 'bin/rubocop -a'
